{% extends 'samehbaseFront.html.twig' %}

{% block galery %}
    <!-- - -->
    <div class="gallery-sidebar t-center p-l-60 p-r-60 p-b-40">
        <!-- - -->
        <h4 class="txt20 m-b-33">
            Gallery
        </h4>
    <!-- Title Page -->
        <h2 class="tit6 t-center">
DETAIL DE LA COMMANDE
        </h2>
    </section>
{% endblock  %}


{% block body %}

    <section class="page-top-section set-bg" data-setbg="{{asset('Front/img/header-bg/2.jpg')}}">
		<div class="container">
			<h2>Détails de la commande</h2>
		</div>
	</section>
	<!-- Page top section end -->


    <form  class="wrap-form-reservation size22 m-l-r-auto" action="/checkout" methode="POST">
        <div class="row">
            <div class="col-md-4">
                <span class="txt9">Nom:</span>
                <div class="wrap-inputname size12 bo2 bo-rad-10 m-t-3 m-b-23">
                    <input class="bo-rad-10 sizefull txt10 p-l-20" type="text" data-validate = "name is required" name="billing_firstname" placeholder="First Name" value="{{ "Sameh"}}">
                </div>
            </div>
                <div class="col-md-4">
                    <span class="txt9">Prénom:</span>
                    <div class="wrap-inputname size12 bo2 bo-rad-10 m-t-3 m-b-23">
                            <input class="bo-rad-10 sizefull txt10 p-l-20"  type="text" required name="billing_lastname" placeholder="Last Name" value="{{ "Ouertani"}}">
                        </div>
                    </div>


            <div class="col-md-4">
                <span class="txt9">Adresse:</span>
                <div class="wrap-inputname size12 bo2 bo-rad-10 m-t-3 m-b-23">
                            <input class="bo-rad-10 sizefull txt10 p-l-20"  type="text" required name="billing_street" placeholder="Street Address" value="{{ "Mourouj"}}">
                        </div>
                    </div>
            <div class="col-md-4">
                <span class="txt9">Appartement:</span>
                <div class="wrap-inputname size12 bo2 bo-rad-10 m-t-3 m-b-23">
                            <input class="bo-rad-10 sizefull txt10 p-l-20"  type="text" required name="billing_apartment" placeholder="Apartment, suite, unit etc." value="{{ "Mourouj"}}">
                        </div>
                    </div>


        <div class="col-md-4">
            <span class="txt9">Region:</span>
            <div class="wrap-inputname size12 bo2 bo-rad-10 m-t-3 m-b-23">
                            <input  class="bo-rad-10 sizefull txt10 p-l-20"  type="text" data-validate = "city is required" placeholder="City" value="{{ "Ben Arous"}}">
                        </div>
                    </div>
        <div class="col-md-4">
            <span class="txt9">Pays:</span>
            <div class="wrap-inputname size12 bo2 bo-rad-10 m-t-3 m-b-23">
                            <input  class="bo-rad-10 sizefull txt10 p-l-20"  type="text" data-validate = "Country is required" name="billing_country" placeholder="Country" value="{{ "Tunis"}}">
                        </div>
                    </div>
        <div class="col-md-4">
            <span class="txt9">Code Postal:</span>
            <div class="wrap-inputname size12 bo2 bo-rad-10 m-t-3 m-b-23">
                            <input class="bo-rad-10 sizefull txt10 p-l-20"  type="text" required name="billing_postcode" placeholder="Postcode" value="{{ "1200"}}">
                        </div>
                    </div>


        <div class="col-md-4">
            <span class="txt9">Email:</span>
            <div class="wrap-inputname size12 bo2 bo-rad-10 m-t-3 m-b-23">

                            <input class="bo-rad-10 sizefull txt10 p-l-20" type="email" required name="billing_email" placeholder="Email" value="{{ "sameh.ouertani@esprit.tn"}}">
                        </div>
                    </div>

        <div class="col-md-4">
            <!-- Phone -->
            <span class="txt9">Téléphone</span>

            <div class="wrap-inputphone size12 bo2 bo-rad-10 m-t-3 m-b-23">
                            <input class="bo-rad-10 sizefull txt10 p-l-20" type="text"  required name="billing_phone" placeholder="Phone"value="{{ 21569874}}">
                        </div>
                    </div>

        </div>

                <!-- Cart -->
                <h2>Produits de votre panier</h2>

                {% for item in items %}
                    <!-- Single Product Block -->
                    <div class="item angled-bg">
                        <div class="row">
                            <div class="col-xs-6 col-md-9">
                                <h4 class="tit2 t-center" style=" color: #0e0f15 ">{{item.produit.getNomProd() }}</h4>
                            </div>
                            <div class="col-xs-6 col-md-3 align-right">
                                <div class="price">
                                    <span class="tit2 t-center" style="font-size: large ; color: #0e0f15 ">{{ item. nbr_Prods}} × <span class="tit2 t-center" style="font-size: large ; color: #0e0f15 ">{{ item.produit.getPrix() }}DT</span></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- /Single Product Block -->
                {% endfor %}

                <div  class="tit2 t-center" style="font-size: x-large">
                    Total: <strong class="tit2 t-center" style="font-size: large ; color: #0e0f15 ">{{total}}DT</strong>
                </div>


                <!-- Order Button -->
        <div class="wrap-btn-booking flex-c-m m-t-6">
                    <button type="submit" class="btn3 flex-c-m size13 txt11 trans-0-4">Place Order</button>

                </div>


    </form>
    </div>
    </div>
    </div>
    </section>
{% endblock %}