	</section>

<div class="wrap-btn-booking flex-c-m m-t-6">
        			<a href="{{ path('app_produit_afficher_front') }}" class="btn3 flex-c-m size13 txt11 trans-0-4">Ajouter Produit</a>
                </div>

    <table class="table">
        <thead>
            <tr>
                <th>Produit</th>
                <th>Prix</th>
                <th>Quantité</th>
                <th>Total</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for element in dataPanier %}

                <tr>
                    <td>{{ element.produit.nomProd}}</td>
                    <td class="text-end">{{ element.produit.prix }} TND</td>
                    <td>{{ element.quantite }}</td>
                    <td class="text-end">{{ element.quantite * element.produit.prix }} TND</td>
                    <td>
                        <a href="{{path("cart_add", {id: element.produit.id})}}" class="btn btn-success">
                            <i class="bi bi-cart-plus"></i> Ajouter 
                        </a>
                        <a href="{{path("cart_remove", {id: element.produit.id})}}" class="btn btn-warning">
                            <i class="bi bi-cart-dash"></i> Enlever  
                        </a>
                        <a href="{{path("cart_delete", {id: element.produit.id})}}" class="btn btn-danger">
                            <i class="bi bi-cart-x"></i> Supprimer
                        </a>
                    </td>
                </tr>
				
            {% else %}
                <tr>
                    <td colspan="5" class="text-center">Votre panier est vide</td>
                </tr>
            {% endfor %}
        </tbody>
        <tfoot>

            <tr>
                <td colspan="3">Total</td>
                <td class="text-end">{{ total }} TND</td>
                <td>
                    <a href="{{path("cart_delete_all")}}" class="btn btn-danger">
                        <i class="bi bi-cart-x"></i> Vider Panier
                    </a>
                
				<tr>
                <td colspan="4" class="tit2 t-center"></td>
                <td class="tit2 t-center" style="font-size: large ; color: #0e0f15 " ></td>

                <td >
                    <a href = "{{ path('checkout') }}" >
                        <div class="wrap-btn-booking flex-c-m m-t-6">
                        <button type="submit" class="btn3 flex-c-m size13 txt11 trans-0-4">Passer une commande</button>
                        </div>
                    </a>
                </td>

                <td >
                    <a href="{{ path('commande_liste') }}">
                        <div class="wrap-btn-booking flex-c-m m-t-6">
                            <button  type="button" class="btn3 flex-c-m size13 txt11 trans-0-4"> Imprimer</button>
                        </div>
                    </a>
                </td>
            </tr>
                

                
            </tr> 
			</td>
        </tfoot>
    </table>
