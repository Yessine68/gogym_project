{% extends 'HanaBack.html.twig' %}

{% block title %}Ajout des reservations{% endblock %}

{% block body %}
<!-- Content Start -->
<div class="content">
    <!-- Form Start -->
    <div class="container-fluid pt-4 px-4">
        <div class="row g-4">
            <div class="col-sm-120 col-xl-60">
                <div class="bg-light rounded h-100 p-4">
                    <h6 class="mb-4">RÃ©servation</h6>
                        {{form_start(form,{'attr': {'novalidate': 'novalidate'}} )}}
                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label">Date</label>
                            <div class="col-sm-10">
                                {{ form_widget(form.date,{ 'attr': {'class': 'form-control'} }) }}                         
                                {{ form_errors(form.date) }}
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label">Type</label>
                            <div class="col-sm-10">
                                {{ form_widget(form.type,{ 'attr': {'class': 'form-control'} }) }}    
                                {{ form_errors(form.type) }}                     
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label">Cours</label>
                            <div class="col-sm-10">
                                {{ form_widget(form.cours,{ 'attr': {'class': 'form-control'} }) }}                         
                                {{ form_errors(form.cours) }}
                            </div>
                        </div>
                        <br>    
                        <a href="{{path('BRead_Reservation')}}">Liste des reservations</a>
                        <br>
                        <br>
                        {{ form_widget(form.Envoyer,{ 'attr': {'class': 'btn btn-primary'} }) }}
                    {{form_end(form)}}
                </div>
            </div>
        </div>
    </div>
    <!-- Form End -->
</div>
{% endblock %}