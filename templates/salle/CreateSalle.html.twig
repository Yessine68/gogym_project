{% extends 'hanaBack.html.twig' %}

{% block style %}
<link
  rel="stylesheet"
  href="https://unpkg.com/leaflet@1.8.0/dist/leaflet.css"
  integrity="sha512-hoalWLoI8r4UszCkZ5kL8vayOGVae1oxXe/2A4AO6J9+580uKHDO3JdHb7NzwwzK5xr/Fs0W40kiNHxM9vyTtQ=="
  crossorigin=""
/>

{% endblock %}

{% block stylesheets %}
{{ parent() }}

<!-- Custom styles for this template-->
<link href="{{ asset('Back/css/style.css') }}" rel="stylesheet" />

{% endblock %}

{% block title %}Ajout des salles{% endblock %}

{% block body %}
    <!-- Form Start -->
    <div class="col-sm-120 col-xl-60">
        <div class="bg-light rounded h-100 p-4">
            <h6 class="mb-4">Salle</h6>
                {{form_start(form,{'attr': {'novalidate': 'novalidate'}} )}}
                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label">Nom</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.nom_s,{ 'attr': {'class': 'form-control'} }) }}                         
                        {{ form_errors(form.nom_s) }}
                    </div>
                </div>
                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label">Image</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.image_s,{ 'attr': {'class': 'form-control'} }) }}                         
                        {{ form_errors(form.image_s) }}
                    </div>
                </div>
                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label">Téléphone</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.tel_s,{ 'attr': {'class': 'form-control'} }) }}    
                        {{ form_errors(form.tel_s) }}                     
                    </div>
                </div>
                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label">Email</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.email_s,{ 'attr': {'class': 'form-control'} }) }}                         
                        {{ form_errors(form.email_s) }}
                    </div>
                </div>
                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label">Adresse</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.adresse_s,{ 'attr': {'class': 'form-control'} }) }}
                        {{ form_errors(form.adresse_s) }}                          
                    </div>
                </div>
                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label">Ville</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.ville_s,{ 'attr': {'class': 'form-control'} }) }} 
                        {{ form_errors(form.ville_s) }}                         
                    </div>
                </div>
                <div class="row mb-3" style="display: none;"> 
                    {{ form_widget(form.longitude_s , {'attr': {'class': 'pos'}}) }}
                </div>
                <div class="row mb-3" style="display: none;"> 
                    {{ form_widget(form.latitude_s , {'attr': {'class': 'pos'}}) }}
                </div>
                <div class="marker-position" style="display: none;">
                    click on the map, move the marker, click on the marker
                </div>
                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label">Localisation</label>
                    <div class="col-sm-10">
                        <div id="map">
                        </div>
                    </div>
                </div>
                <div class="row mb-3">
                    <label class="col-sm-2 col-form-label">Périmetre (m²)</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.perimetre_s,{ 'attr': {'class': 'form-control'} }) }} 
                        {{ form_errors(form.perimetre_s) }}                         
                    </div>
                </div>
                <div class="row mb-3">
                    <legend class="col-form-label col-sm-2 pt-0">Abonnement disponible</legend>
                    <div class="col-sm-10">
                        {{ form_widget(form.abonnements,{ 'attr': {'class': 'checkboxes'} }) }}
                        {{ form_errors(form.abonnements) }} 
                    </div>
                </div>
                <br>    
                <a href="{{path('Read_Back_Salle')}}" class="mt-2" >Liste des salles</a>
                <br>
                <br>
                <div style="text-align: right;">
                    {{ form_widget(form.Envoyer,{ 'attr': {'class': 'btn btn-primary'} }) }}
                </div>
            {{form_end(form)}}
        </div>
    </div>
    <!-- Form End -->
{% endblock %}