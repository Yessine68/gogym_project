                                +216
                                <span>{{ salle.getTelS()[0:2] }} </span> 
                                <span>{{ salle.getTelS()[2:3] }} </span> 
                                <span>{{ salle.getTelS()[5:8] }} </span>
                            </td>
                        </tr>
                        <tr>
                            <th>Email</th>
                            <td>{{salle.getEmailS()}}</td>
                        </tr>
                        <tr>
                            <th>Adresse</th>
                            <td>{{salle.getAdresseS()}}, {{salle.getVilleS()}}</td>
                        </tr>
						<tr>
                            <th>Ville</th>
                            <td>{{salle.getVilleS()}}</td>
                        </tr>
