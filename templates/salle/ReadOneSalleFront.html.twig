	<!-- maphana -->
	<script src="https://unpkg.com/leaflet@1.8.0/dist/leaflet.js" integrity="sha512-BB3hKbKWOc9Ez/TAwyWxNXeoV9c1v6FIeYiBieIWkpLjauysF18NzgR1MBNBXf8/KABdlkX68nAhlwcDFLGPCQ==" crossorigin=""></script>
	<script>
		const p1 = {{ salle.pos1|json_encode() }};
		const p2 = {{ salle.pos2|json_encode() }}

		var map = L.map('map').setView([36.70365959719456, 10.17818283871446], 7);
		var OpenStreetMap_Mapnik = L.tileLayer('http://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', { maxZoom: 19, attribution: '&copy; <a href="http://www.openstreetmap.org/copyright">OpenStreetMap</a>' }).addTo(map);

		L.marker([p1, p2]).addTo(map).bindPopup('Bienvenu').openPopup();
	</script>
	<!-- maphana end -->

