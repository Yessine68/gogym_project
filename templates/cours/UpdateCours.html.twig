{% extends 'baseBack.html.twig' %}

{% block title %}Modification des cours{% endblock %}

{% block body %}
<!-- Content Start -->
<div class="content">
    <!-- Form Start -->
    <div class="container-fluid pt-4 px-4">
        <div class="row g-4">
            <div class="col-sm-120 col-xl-60">
                <div class="bg-light rounded h-100 p-4">
                    <h6 class="mb-4">Cours</h6>
                        {{form_start(form,{'attr': {'novalidate': 'novalidate'}} )}}
                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label">Nom</label>
                            <div class="col-sm-10">
                                {{ form_widget(form.Nom,{ 'attr': {'class': 'form-control'} }) }}  
                                {{ form_errors(form.Nom) }}                        
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label">Duree</label>
                            <div class="col-sm-10">
                                {{ form_widget(form.duree,{ 'attr': {'class': 'form-control', 'placeholder': 'Mensuel, Bimestriel, trimestriel, semestriel, annuel...'} }) }} 
                                {{ form_errors(form.duree) }}                         
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label">Intensite</label>
                            <div class="col-sm-10">
                                {{ form_widget(form.intensite,{ 'attr': {'class': 'form-control'} }) }} 
                                {{ form_errors(form.intensite) }}                         
                            </div>
                        </div>

    
                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label">Bienfaits</label>
                            <div class="col-sm-10">
                                {{ form_widget(form.bienfaits,{ 'attr': {'class': 'form-control'} }) }}  
                                {{ form_errors(form.bienfaits) }}                        
                            </div>
                        </div>
                        <br>    
                        <a href="{{path('BRead_Cours')}}" >Liste des Cours</a>
                        <br>
                        <br>
                        {{ form_widget(form.Envoyer,{ 'attr': {'class': 'btn btn-primary'} }) }}
                    {{form_end(form)}}
                </div>
            </div>
        </div>
    </div>
    <!-- Form End -->
</div>
{% endblock %}